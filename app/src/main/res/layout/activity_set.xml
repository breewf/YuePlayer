<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ghy.yueplayer.base.view.DnLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dn_white"
            android:orientation="vertical"
            android:padding="10dp">

            <com.ghy.yueplayer.base.view.DnTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="播放模式"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="10dp"
                android:background="@color/dn_gary_bg_1"/>

            <RadioGroup
                android:id="@+id/set_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="列表循环"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="随机播放"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="单曲循环"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

            </RadioGroup>

            <com.ghy.yueplayer.base.view.DnTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Y U E 动画"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="10dp"
                android:background="@color/dn_gary_bg_1"/>

            <RadioGroup
                android:id="@+id/anim_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/anim1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="没有动画"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/anim2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="漂流潜泳"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/anim3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="贪吃蛇啊"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

            </RadioGroup>

            <com.ghy.yueplayer.base.view.DnTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CIRCLE 动画"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"
                android:visibility="visible"/>

            <com.ghy.yueplayer.base.view.DnView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="10dp"
                android:background="@color/dn_gary_bg_1"
                android:visibility="visible"/>

            <RadioGroup
                android:id="@+id/circle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/c_anim1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="没有动画"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/c_anim2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="魔力圈圈"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"/>

                <com.ghy.yueplayer.base.view.DnRadioButton
                    android:id="@+id/c_anim3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:buttonTint="@color/dn_title_5"
                    android:padding="10dp"
                    android:text="重力感应"
                    android:textColor="@color/dn_title_5"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            </RadioGroup>

            <com.ghy.yueplayer.base.view.DnTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="设置项"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="10dp"
                android:background="@color/dn_gary_bg_1"/>

            <com.ghy.yueplayer.base.view.DnTextView
                android:id="@+id/tv_fx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="音效调节"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"
                android:visibility="gone"/>

            <com.ghy.yueplayer.base.view.DnRadioButton
                android:id="@+id/rb_fx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/dn_title_5"
                android:checked="true"
                android:padding="10dp"
                android:text="音效调节"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="实验室"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="10dp"
                android:background="@color/dn_gary_bg_1"/>

            <com.ghy.yueplayer.base.view.DnRadioButton
                android:id="@+id/radioButton_color_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/dn_title_5"
                android:checked="false"
                android:padding="10dp"
                android:text="专辑封面背景虚化"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnRadioButton
                android:id="@+id/radioButton_note_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/dn_title_5"
                android:checked="false"
                android:padding="10dp"
                android:text="开启播放音乐音符"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"/>

            <com.ghy.yueplayer.base.view.DnRadioButton
                android:id="@+id/radioButton_open_list_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/dn_title_5"
                android:checked="false"
                android:padding="10dp"
                android:text="开启音乐列表动画"
                android:textColor="@color/dn_title_5"
                android:textSize="16sp"
                android:visibility="gone"/>

        </com.ghy.yueplayer.base.view.DnLinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
