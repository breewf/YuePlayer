<com.ghy.yueplayer.base.view.DnLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dn_white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.ghy.yueplayer.base.view.DnRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dn_white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_app_white_big"
                android:visibility="visible" />

            <com.ghy.yueplayer.base.view.DnHeroTextView
                android:id="@+id/tv_yue_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="YuePlayer"
                android:textColor="@color/dn_hero_title_1"
                android:textSize="44sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ghy.yueplayer.base.view.DnTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="THIS TIME"
                    android:textColor="@color/dn_hero_title_1"
                    android:textSize="22sp" />

                <com.ghy.yueplayer.base.view.DnTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -->  "
                    android:textColor="@color/dn_hero_title_1"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.ghy.yueplayer.base.view.DnTextView
                        android:id="@+id/tv_time_this_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:"
                        android:textColor="@color/dn_hero_title_1"
                        android:textSize="22sp" />

                    <com.ghy.yueplayer.base.view.DnTextView
                        android:id="@+id/tv_time_this"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/dn_hero_title_1"
                        android:textSize="22sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ghy.yueplayer.base.view.DnTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="ALL  TIME"
                    android:textColor="@color/dn_hero_title_1"
                    android:textSize="22sp" />

                <com.ghy.yueplayer.base.view.DnTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -->  "
                    android:textColor="@color/dn_hero_title_1"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.ghy.yueplayer.base.view.DnTextView
                        android:id="@+id/tv_time_all_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:"
                        android:textColor="@color/dn_hero_title_1"
                        android:textSize="22sp" />

                    <com.ghy.yueplayer.base.view.DnTextView
                        android:id="@+id/tv_time_all_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/dn_hero_title_1"
                        android:textSize="22sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.ghy.yueplayer.base.view.DnTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获得称号:"
                    android:textColor="@color/dn_hero_title_1"
                    android:textSize="20sp" />

                <com.ghy.yueplayer.base.view.DnTextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXX"
                    android:textColor="@color/dn_hero_title_1"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </com.ghy.yueplayer.base.view.DnRelativeLayout>

    <com.ghy.yueplayer.base.view.DnTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="备注：总计时间截止到上次使用，本次使用不统计在内。"
        android:textColor="@color/dn_hero_title_1"
        android:textSize="12sp" />

</com.ghy.yueplayer.base.view.DnLinearLayout>
