<com.ghy.yueplayer.base.view.DnLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dn_white"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.ghy.yueplayer.base.view.DnRelativeLayout
        android:id="@+id/layout_yue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dn_white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon_app_white_big"/>

            <com.ghy.yueplayer.base.view.DnHeroTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="YuePlayer"
                android:textColor="@color/dn_hero_title_1"
                android:textSize="54sp"/>

            <com.ghy.yueplayer.base.view.DnHeroTextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="VERSION"
                android:textColor="@color/dn_hero_title_1"
                android:textSize="30sp"/>

        </LinearLayout>

    </com.ghy.yueplayer.base.view.DnRelativeLayout>

    <com.ghy.yueplayer.base.view.DnLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dn_gary_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.ghy.yueplayer.base.view.DnHeroTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="A simple Local Music Player"
            android:textColor="@color/dn_hero_title_1"
            android:textSize="24sp"/>

        <com.ghy.yueplayer.base.view.DnHeroTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Copyright Â© 2015 GHY. All rights reserved."
            android:textColor="@color/dn_hero_title_1"
            android:textSize="14sp"/>

    </com.ghy.yueplayer.base.view.DnLinearLayout>

</com.ghy.yueplayer.base.view.DnLinearLayout>
