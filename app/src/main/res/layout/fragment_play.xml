<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray6">

    <!-- 歌曲名，歌手名-->
    <RelativeLayout
        android:id="@+id/play_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMusicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:text="歌曲名称"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>


    <TextView
        android:id="@+id/tvSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#80FFFFFF"
        android:textSize="16sp"
        android:text="歌手名"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvMusicName"/>
    </RelativeLayout>


    <!-- 进度条，封面-->
    <RelativeLayout
        android:id="@+id/play_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/seekArcContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- 专辑封面-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_music_album"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:border_color="@color/white"
                app:border_width="4dp"
                seekarc:border_width="1dp"
                seekarc:border_color="@color/gray2"
                android:src="@mipmap/default_artist" />

            <!-- 时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/tv_time_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="00:00"
                    android:layout_marginRight="-10dp"
                    android:textColor="@color/gray1"/>

                <SeekBar
                    android:id="@+id/play_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:progressDrawable="@drawable/my_seek_bar_red_bg"
                    android:thumb="@drawable/custom_seek_bar_control_selector"
                    android:thumbOffset="0dp"/>

                <TextView
                    android:id="@+id/tv_time_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="00:00"
                    android:layout_marginLeft="-10dp"
                    android:textColor="@color/gray2"/>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>


    <!-- 播放控制，收藏-->
    <RelativeLayout
        android:id="@+id/play_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_control_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/control_image_bg_selector_color1"
                android:src="@mipmap/icon_play_pre"/>

            <ImageView
                android:id="@+id/iv_control_start_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/control_image_bg_selector_color1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@mipmap/icon_play_play"/>

            <ImageView
                android:id="@+id/iv_control_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/control_image_bg_selector_color1"
                android:src="@mipmap/icon_play_next"/>


        </LinearLayout>

    </RelativeLayout>




</LinearLayout>
